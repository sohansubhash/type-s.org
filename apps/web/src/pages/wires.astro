---
import Layout from '../layouts/Layout.astro';
import { getDb } from '../lib/db';
import * as schema from '@type-s/schema';

const db = getDb(Astro.locals.runtime.env.DB);
const wires = await db.select().from(schema.wires);
---

<Layout title="Stabilizer Wires">
  <h1>Stabilizer Wires</h1>
  <p>Metal wires for HHKB stabilizer assemblies.</p>

  <div style="margin-top: 2rem;">
    {wires.map((wire) => (
      <div style="border: 1px solid #ccc; padding: 1rem; margin: 1rem 0; border-radius: 8px;">
        <h2>{wire.name}</h2>
        <ul style="margin-left: 1.5rem; margin-top: 0.5rem;">
          <li><strong>Part Number:</strong> {wire.partNumber || 'N/A'}</li>
          {wire.description && <li><strong>Description:</strong> {wire.description}</li>}
        </ul>
      </div>
    ))}
  </div>
</Layout>
