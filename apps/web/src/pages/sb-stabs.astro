---
import Layout from '../layouts/Layout.astro';
import { getDb } from '../lib/db';
import * as schema from '@type-s/schema';

const db = getDb(Astro.locals.runtime.env.DB);
const sbStabs = await db.select().from(schema.sbStabs);
---

<Layout title="Spacebar Stabilizers">
  <h1>Spacebar Stabilizers</h1>
  <p>Stabilizer mechanisms for HHKB spacebars.</p>

  <div style="margin-top: 2rem;">
    {sbStabs.map((stab) => (
      <div style="border: 1px solid #ccc; padding: 1rem; margin: 1rem 0; border-radius: 8px;">
        <h2>{stab.name}</h2>
        <ul style="margin-left: 1.5rem; margin-top: 0.5rem;">
          <li><strong>Part Number:</strong> {stab.partNumber || 'N/A'}</li>
          {stab.description && <li><strong>Description:</strong> {stab.description}</li>}
        </ul>
      </div>
    ))}
  </div>
</Layout>
