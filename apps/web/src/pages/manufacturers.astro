---
import Layout from '../layouts/Layout.astro';
import { getDb } from '../lib/db';
import * as schema from '@type-s/schema';

const db = getDb(Astro.locals.runtime.env.DB);
const manufacturers = await db.select().from(schema.manufacturers);

function formatValue(key: string, value: any): string | null {
  if (value === null || value === undefined) return null;
  return String(value);
}

function formatFieldName(key: string): string {
  return key
    .split('_')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}

const excludeFields = ['id', 'name'];
---

<Layout title="Manufacturers">
  <h1>Manufacturers</h1>
  <p>Companies and manufacturers in the HHKB ecosystem.</p>

  <div style="margin-top: 2rem;">
    {manufacturers.map((mfr) => (
      <div style="border: 1px solid #ccc; padding: 1rem; margin: 1rem 0; border-radius: 8px;">
        <h2>{mfr.name}</h2>
        <ul style="margin-left: 1.5rem; margin-top: 0.5rem;">
          {Object.entries(mfr)
            .filter(([key]) => !excludeFields.includes(key))
            .map(([key, value]) => {
              const formattedValue = formatValue(key, value);
              if (!formattedValue) return null;

              if (key === 'url') {
                return (
                  <li>
                    <strong>Website:</strong>{' '}
                    <a href={String(value)} target="_blank" rel="noopener noreferrer">
                      {String(value)}
                    </a>
                  </li>
                );
              }

              return (
                <li>
                  <strong>{formatFieldName(key)}:</strong> {formattedValue}
                </li>
              );
            })
          }
        </ul>
      </div>
    ))}
  </div>
</Layout>
