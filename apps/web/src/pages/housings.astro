---
import Layout from '../layouts/Layout.astro';
import { getDb } from '../lib/db';
import * as schema from '@type-s/schema';

const db = getDb(Astro.locals.runtime.env.DB);
const housings = await db.select().from(schema.housings);
---

<Layout title="Switch Housings">
  <h1>Switch Housings</h1>
  <p>Topre switch housings and enclosures.</p>

  <div style="margin-top: 2rem;">
    {housings.map((housing) => (
      <div style="border: 1px solid #ccc; padding: 1rem; margin: 1rem 0; border-radius: 8px;">
        <h2>{housing.name}</h2>
        <ul style="margin-left: 1.5rem; margin-top: 0.5rem;">
          <li><strong>Part Number:</strong> {housing.partNumber || 'N/A'}</li>
          {housing.description && <li><strong>Description:</strong> {housing.description}</li>}
        </ul>
      </div>
    ))}
  </div>
</Layout>
